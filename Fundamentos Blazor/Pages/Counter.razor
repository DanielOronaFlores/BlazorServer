@page "/counter"
@page "/counter/{value:int}" // This route parameter is optional

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [Parameter] // This attribute identifies the value as a parameter
    public int value { get; set; }

    private int currentCount = 0;

    protected override void OnParametersSet() // This method is called when the parameters are set
    {
        base.OnParametersSet();
        currentCount = value;
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
